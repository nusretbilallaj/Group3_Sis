@using System.Security.Principal
@model List<Studenti>

<div class="container">
    <div class="row mt-5">
        <div class="col-6 pt-3" >
            <h3 class="text-danger"> Lista e studenteve </h3>
        </div>
        <div class="col-6 pt-3 text-end" >
            <a class="btn btn-success" asp-controller="Student" asp-action="Krijo">Shto</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Emri</th>
            <th>Mbiemri</th>
            <th>Komuna</th>
            <td>Veprimet</td>
        </tr>
        </thead>
        <tbody>
        @foreach (Studenti stud in Model)
        {
            <tr>
                <td>@stud.Id</td>
                <td>@stud.Emri</td>
                <td>@stud.Mbiemri</td>
                <td>@stud.Komuna.Emri</td>
                <td>
                    <div class="w-75 btn-group">
                        <a class="btn btn-primary mx-1" 
                           asp-controller="Student" 
                           asp-action="Ndrysho"
                           asp-route-studentId="@stud.Id">Ndrysho</a>
                            <a class="btn btn-danger mx-1"
                           asp-controller="Student"
                           asp-action="Fshi"
                           asp-route-studentId="@stud.Id">
                           Fshi
                        </a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
      
    </table>
</div>

